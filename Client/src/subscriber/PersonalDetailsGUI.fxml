<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="600.0" prefWidth="900.0" stylesheets="@Subscriber.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="subscriber.PersonalDetailsController">
   <children>
      <!-- Sidebar Section -->
      <VBox layoutX="0.0" layoutY="0.0" prefHeight="600.0" prefWidth="220.0" styleClass="sidebar">
         <children>
            <Label alignment="TOP_CENTER" prefHeight="324.0" prefWidth="167.0" styleClass="sidebar-title" text="BLib" />
            <VBox alignment="CENTER" prefHeight="287.0" prefWidth="180.0" spacing="20.0">
                <Button fx:id="btnBack" onAction="#btnBack" prefHeight="48.0" prefWidth="176.0" styleClass="btn-danger" text="⬅ Back" />
            </VBox>
         </children>
      </VBox>
      
      <!-- Content Section -->
      <VBox layoutX="220.0" layoutY="14.0" prefHeight="580.0" prefWidth="680.0" spacing="20.0" styleClass="content-box">
         <children>
            <Label styleClass="header" text="👤 Subscriber Details" />
            <Label styleClass="sub-header" text="View and update your personal information." />
            
            <HBox spacing="15.0">
                <Label styleClass="form-label" text="First Name:" />
                <Label fx:id="lblName" style="-fx-font-size: 16px;" />
            </HBox>
            
            <HBox spacing="15.0">
                <Label styleClass="form-label" text="Last Name:" />
                <Label fx:id="lblLastName" style="-fx-font-size: 16px;" />
            </HBox>
            
            <HBox spacing="15.0">
                <Label styleClass="form-label" text="User ID:" />
                <Label fx:id="lblUserID" style="-fx-font-size: 16px;" />
            </HBox>
            
            <HBox spacing="15.0">
                <Label styleClass="form-label" text="Status:" />
                <Label fx:id="lblStatus" style="-fx-font-size: 16px;" />
            </HBox>
            
            <HBox spacing="15.0">
                <Label styleClass="form-label" text="Phone Number:" />
                <TextField fx:id="txtPhone" styleClass="form-textfield" />
            </HBox>
            
            <HBox spacing="15.0">
                <Label styleClass="form-label" text="Email:" />
                <TextField fx:id="txtEmail" prefHeight="37.0" prefWidth="277.0" styleClass="form-textfield" />
            </HBox>
            
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btnUpdate" onAction="#btnUpdate" prefWidth="300.0" styleClass="btn-primary" text="✏ Update Details" />
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
