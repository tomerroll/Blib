<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="500.0" prefWidth="600.0" stylesheets="@common.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="common.ClientIpController">
   <children>
      <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="400.0" prefWidth="500.0" spacing="30.0" styleClass="ip-container">
         <children>
            <Label alignment="CENTER" styleClass="ip-title" text="🌍 Server IP Configuration" />
            
            <VBox alignment="CENTER" spacing="15.0">
                <Label styleClass="ip-label" text="Enter Server IP:" />
                <TextField fx:id="iptxt" promptText="Enter IP Address..." styleClass="ip-textfield" />
            </VBox>
            
            <VBox alignment="CENTER" spacing="15.0">
                <Button fx:id="btnNext" onAction="#Next" styleClass="btn-apply" text="✅ Apply" />
                <Button fx:id="btnExit" onAction="#getExitBtn" styleClass="btn-exit" text="❌ Exit" />
            </VBox>
         </children>
      </VBox>
   </children>
</Pane>
